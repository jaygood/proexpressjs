extends layout
block content
  .menu
    h2 Menu
    ul.nav.nav-pills
      li
        a(href='/') Home
      li.active
        a(href='/tasks') Todo List
      li
        a(href='/tasks/completed') Completed
  h1= title
  .list
    if (tasks.length === 0)
      | No tasks.
    each task, index in tasks
      .item
        div.num
          span=index + 1
            |.&nbsp;
        div.name
          spane.name=task.name
